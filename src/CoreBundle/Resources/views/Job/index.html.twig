{% extends "CoreBundle::layout.html.twig" %}

{% block title %}JobZ{% endblock %}

{% block content %}

<div class="content">
    <div id="jobs">
        {% for k,v in jobsByCat %}
        <div class="category_{{ k }}">
            <div class="category">
                <h1>
                    <a href="{{ path("core_category_show", {'name': k} ) }}">{{ k }}</a>
                </h1>
            </div>
            <table class="jobs">
                <tbody>
            {% for job in v[0]  %}
                <tr class="odd">
                    <td class="location">
                        {{ job.location }}
                    </td>
                    <td class="position">
                        <a href="job.html">{{ job.position }}</a>
                    </td>
                    <td class="company">
                        {{ job.company }}
                    </td>
                </tr>
            {% endfor %}
                </tbody>
            </table>
            {% endfor %}
    </div>
</div>

{% endblock %}


