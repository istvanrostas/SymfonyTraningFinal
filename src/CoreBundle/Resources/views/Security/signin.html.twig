{% extends "CoreBundle::layout.html.twig" %}

{% block title %}JobZ{% endblock %}

{% block content %}

    <div class="content">
        <h1>
            Login
        </h1>
        {% if error %}
            <div class="error_list">{{ error.message }}</div>
        {% endif %}
        <form method="post" action="{{ path('core_security_signin') }}" enctype="multipart/form-data">
            <table id="job_form">
                <tfoot>
                <tr>
                    <td colspan="2">
                        <input value="Submit" type="submit">
                    </td>
                </tr>
                </tfoot>
                <tbody>
                <tr>
                    <th>
                        <label for="username">Username</label>
                    </th>
                    <td>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" >
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="password">Password</label>
                    </th>
                    <td>
                        <input type="password" id="password" name="_password" >
                    </td>
                </tr>
                </tbody>
            </table>
        </form>
    </div>

{% endblock %}
