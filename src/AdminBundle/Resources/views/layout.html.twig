{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/admin/admin.css') }}">
{% endblock %}

{% block body %}
    <header>
        <p>JobZ - Admin</p>

        <nav>
            <ul>
                <li><a href="{{ path('admin_category_index') }}">Category</a></li>
                <li><a href="{{ path('admin_job_index') }}">Job</a></li>
                <li><a href="{{ path('admin_information_index') }}">Informations</a></li>
                {% if app.user %}
                    <li><a href="{{ path('admin_security_logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>


    <section>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <p class="session-message">{{ message }}</p>
            {% endfor %}
        {% endfor %}

        {% block content %}

        {% endblock %}

    </section>
{% endblock %}